<section class="section">
	<div class="container">
		<nav class="level">
		<!-- Left side -->
		  <div class="level-left">
		    <div class="level-item">
		        <h1 class="subtitle is-4"><%= @journal.day %>/<%= @journal.month %>/<%= @journal.year %></h1>
		    </div>
		  </div>
		<!-- Right side -->
		<div class="level-right">
            <p class="level-item">
                <%= link_to "Edit", edit_journal_path(@journal), class: "button" %>
            </p> 
            <p class="level-item">
                <%= button_to "Delete", @journal, method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
            </p>
		</div>
		</nav>
		<hr/>

		<div class="content">
            <div class="subtitle is-6">
                <%= @journal.title %>
            </div>
			<%= @journal.description %>
		</div>

	</div>
</section>