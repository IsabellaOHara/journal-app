<br>
<%= simple_form_for @entry do |f| %>
  <div class="control">
      <div class="select">
          <%= f.input :group, collection: ["Note"], selected: ["Note"], label_html: { class: 'label' }  %>
      </div>
  </div>
  <br>
  <br>
  <div class="field">
    <div class="control">
      <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :link, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }  %>
    </div>
  </div>

  <div>
    <%= f.input :tags, value: entry.tags.map(&:name).join(","), input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }  %>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :notes, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %>
    </div>
  </div>
  <%= f.button :submit, 'Create new post', class: "button is-primary" %>
<% end %>
