<% content_for(:html_title) { 'Edit Journal Entry' } %>
<div class="is-align-content-center">
    <h1 class="is-size-3">Edit your journal entry</h1>
</div>

<div>
    <%= simple_form_for @journal do |f| %>
        
            
        <div class="control">
            <div class="select">
                <%= f.input :group, collection: ["Journal"], selected: ["Journal"], label_html: { class: 'label' }  %>
            </div>
        </div>
        <br>
        <br>
        <div class="field is-horizontal">
            <div class="level-left">
                <div class="level-item">
                    <div class="field-body">
                        <div class="control">
                        <%= f.input :day, input_html: { class: 'input', max: 31 }, wrapper: false, label_html: { class: 'label' } %>
                        </div>
                    </div>
                </div>
                <div class="level-item">
                    <div class="field-body">
                        <div class="control">
                        <%= f.input :month, input_html: { class: 'input', max: 12 }, wrapper: false, label_html: { class: 'label' }  %>
                        </div>
                    </div>
                </div>
                <div class="level-item">
                    <div class="control">
                        <div class="select is-fullwidth">
                            <%= f.input :year, collection: 2023..2100, selected: 2023, label_html: { class: 'label' }  %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

  
   
        <br>
        <br>

        <div class="field">
            <div class="control">
            <%= f.input :title, input_html: { class: 'input', type: 'text' }, wrapper: false, label_html: { class: 'label' }  %>
            </div>
        </div>

        <div class="field">
            <div class="control">
            <%= f.input :description, input_html: { class: 'textarea', type: 'text' }, wrapper: false, label_html: { class: 'label' }  %>
            </div>
        </div>

        <%= f.button :submit, 'Save changes', class: "button is-primary" %>
    <% end %>
    
</div>
<br>