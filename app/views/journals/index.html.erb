<div class="has-text-centered">
     <h2 class="subtitle is-3">All Journal Entries</h2>
</div>

<section class="section">
	<div class="container">
  <% @journals.each do |journal| %>
    <nav class="level">
		  <!-- Left side -->


		  <div class="level-left">
        <div class="level-item">
          <h3 class="subtitle is-4">
                <%= journal.day %>/<%= journal.month %>/<%= journal.year %>
                <br>
                <%= journal.title %>
          </h3>
        </div>
		  </div>
		  <!-- Right side -->
		  <div class="level-right">
          <p class="level-item">
              <%= link_to "Edit", edit_journal_path(journal), class: "button" %>
          </p> 
          <p class="level-item">
            <%= button_to "Delete", journal, method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
          </p>
		  </div>
    </nav>
    <hr/>

		<div class="content">
      <%= journal.description %>
		</div>
    <% end %>
  </div>
</section>

