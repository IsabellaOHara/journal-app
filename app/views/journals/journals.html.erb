<h2>Journal</h2>

<style>
h1, h2 {
    display: flex;
    justify-content: center;
}
table, tr, {
  padding: 5px;
}
table {
  border-spacing: 15px;
}
</style>

<div>
<table>
    <tr>
    <% @entries.each do |entry| %>
    <%= @journal.day %>
    <p>/</p>
    <%= @journal.month %>
    <p>/</p>
    <%= @journal.year %>
    </tr>
    <tr>
    <%= @journal.title %>
    </tr>
    <tr>
    <%= @journal.description %>
    </tr>
    <tr>
    <%= button_to "Delete", entry, method: :delete, data: { confirm: "Are you sure you want to delete this Project ?"} %>
    </tr>
 <% end %>
 </table>
</div>